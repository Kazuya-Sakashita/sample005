<div class="h-screen overflow-hidden flex overflow-visible">
  <div class="container mx-auto px-8 p-6 font-mono">
    <!--    <div class="md:flex max-w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">-->
    <div class="px-5 py-4 border-b border-gray-100">
      <div class="container  mx-auto px-8">
        <h1 class="text-4xl font-bold pt-2">基本情報管理画面</h1>

        <div class="md:flex text-gray-500">
          <% if user_signed_in? %> <!-- ユーザーがログインしているか調べる -->
            <div class="md:flex flex-auto ">
              <p class="place-self-center "> メールアドレス： <%= current_user.email %> </p>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "inline-block bg-gray-200 hover:bg-gray-300 focus-visible:ring ring-indigo-300 text-gray-500 active:text-gray-700 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 m-2 px-3 py-3 hover:text-white" %>
          <% end %>
          </div>
        </div>
        <br>
        <div class="md:flex space-x-1 ">
          <div><%= link_to "1.基本情報", edit_mypage_path(current_user.id), class: "mt-2 inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %></div>
          <div><%= link_to "2.基本情報SKILL", skill_managements_path, class: "mt-2 inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %></div>
          <div><%= link_to "3.稼働管理", managements_path, class: "mt-2 inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %></div>
        </div>

        <div>
          <div class="py-4">
            <h2>登録情報</h2>
            <div>
              <table class="table-auto w-full">
                <tbody>
                <tr>
                  <th class="border border-indigo-500">メールアドレス:</th>
                  <td class="border border-indigo-500"> <%= @user.email %></td>
                </tr>
                <tr>
                  <th class="border border-indigo-500">氏名:</th>
                  <td class="border border-indigo-500"><%= @user.name %></td>
                </tr>
                <tr>
                  <th class="border border-indigo-500">電話番号:</th>
                  <td class="border border-indigo-500"><%= @user.phone_number %></td>
                </tr>
                <tr>
                  <th class="border border-indigo-500">スキル:</th>
                  <td class="border border-indigo-500">
                    <% @user.skill_managements.each do |skill| %>
                      <%= skill.skill.skill %> /
                      <%= skill.skill_level %>　　
                    <% end %></td>
                </tr>
                <tr>
                  <th class="border border-indigo-500">Githubアカウント:</th>
                  <td class="border border-indigo-500"><%= link_to @user.github_url, @user.github_url, target: :_blank %></td>
                </tr>
                <tr>
                  <th class="border border-indigo-500">口座情報:</th>
                  <td class="border border-indigo-500"><%= @user.account_info %></td>
                </tr>
                <tr>
                  <% if @wage.present? %>
                    <th class="border border-indigo-500">単価:</th>
                    <td class="border border-indigo-500"><%= number_to_currency(@wage.unit_price, unit: "¥", format: "%u %n", precision: 0) %></td>
                    </tr>
                    <tr>
                      <th class="border border-indigo-500">単位:</th>
                      <td class="border border-indigo-500"><%= @wage.unit %></td>
                    </tr>
                  <% end %>
                  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>